        .well(id='chat-window')
            form.form-group(action='' id='chat-form')
                .input-group
                    input.form-control(type='text' id='room-join')
                    span.input-group-btn
                        button.btn.btn-primary(id='chat-send') Send
            form.form-group(action='' id='chat-form')
                .input-group
                    input.form-control(type='text' id='room')
                    span.input-group-btn
                        button.btn.btn-primary(id='chat-send') Send